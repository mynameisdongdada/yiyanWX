page {
    height: 100%;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    background-color: #EBEBEB;
}

.load-more-container {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100rpx;
    align-items: center;
    align-content: center;
    justify-content: center;
}

.load-more-tips {
    font-size: 30rpx;
    color: #999999;
    margin-left: 10rpx;
}

.driver {
    height: 3rpx;
    widows: 100%;
    background-color: #cccccc;
}

.header_image {
    background: linear-gradient(135deg,#FFFFFF 0%,#DDDDDD 100%);
    width: 100%;
    height: 250px;
    top: 0;
    left: 0;
}

.item-container {
    display: flex;
    flex-direction: row;
    width: 100%;
    margin-top: 10rpx;
}

.iamge-item-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 400rpx;
    background-color: #ffffff;
    padding: 8rpx;
    padding-top: 0;
}

.tips-container {
    display: flex;
    flex-direction: row;
    font-size: 20rpx;
    color: #333333;
    padding-top: 20rpx;
    padding-bottom: 30rpx;
    padding-left: 10rpx;
    padding-right: 10RPX;
}

.image {
    width: 100%;
    height: 100%;
    background-color: #eeeeee;
}

.navigator {
    background-color: rgba(3,169,244,0);
    height: 44px;
    width: 100%;
    position: fixed;
    top: 30rpx;
    left: 0;
    z-index: 999;
    display: flex;
    flex-direction: row;
}

.leftButton {
    width: 50px;
    height: 44px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.leftButton>image {
    width: 25px;
    height: 25px;
}

.title {
    height: 44px;
    margin-right: 50px;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.title>text {
    font-size: 16px;
    color: #FFF;
    font-weight: 500;
}

.header_image {
    width: 100%;
    height: 250px;
}